<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/pokemonsListFragment">

    <fragment
        android:id="@+id/pokemonsListFragment"
        android:name="com.riningan.mvvmsample.presentation.pokemons_list.PokemonsListFragment"
        android:label="PokemonsListFragment">
        <action
            android:id="@+id/action_pokemonsListFragment_to_pokemonDetailsFragment"
            app:destination="@id/pokemonDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailsFragment"
        android:name="com.riningan.mvvmsample.presentation.pokemon_details.PokemonDetailsFragment"
        android:label="PokemonDetailsFragment">
        <argument
            android:name="pokemonName"
            app:argType="string" />
    </fragment>
</navigation>